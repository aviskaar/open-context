{
  "name": "opencontext",
  "version": "1.0.0",
  "description": "Convert ChatGPT conversation exports to Claude-compatible format",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "opencontext": "./dist/index.js",
    "opencontext-mcp": "./dist/mcp/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "mcp:server": "tsx src/mcp/index.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "chatgpt",
    "claude",
    "conversation",
    "export",
    "converter",
    "ai",
    "mcp",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "adm-zip": "^0.5.16",
    "chalk": "^5.6.2",
    "commander": "^13.1.0",
    "ollama": "^0.6.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^25.2.1",
    "@vitest/coverage-v8": "^4.0.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
